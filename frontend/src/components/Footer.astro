---
// 自动获取当前年份
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <p>&copy; {currentYear} Tiny Crochet. All rights reserved.</p>
  <p class="sub-text">Digital PDF Amigurumi Patterns</p>
</footer>

<style>
  .site-footer {
    padding: 4rem 2rem 2rem;
    text-align: center;
    border-top: 1px solid var(--color-placeholder, #eaeaea);
    margin-top: auto; /* 保证 footer 永远在页面最底部 */
  }

  p {
    margin: 0;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .sub-text {
    margin-top: 0.5rem;
    font-size: 0.75rem;
    opacity: 0.5;
  }
</style>